<launch>
  <node name="cartographer" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find cartographer_hsr)/configuration_files
          -configuration_basename hsr_2d.lua"
      output="screen">
    <remap from="scan" to="hsrb/base_scan" />
    <remap from="odom" to="hsrb/odom" />
  </node>
</launch>
